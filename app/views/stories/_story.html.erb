<div class="story-item UserSmallListItem account-summary" data-story-path="<%= story_path(story) %>">
  <div class="content">
    <% if story.brand_id %>
        <%= render "story_brand_head", brand: story.brand %>
    <% else %>
        <%= render "story_user_head", user: story.user %>
    <% end %>

  </div>
  <p class="story-content">
    <%= story.description %>
  </p>
</div>

<%= render "/parts/shareable", item: story, url: story_url(story) %>
<div class="clearfix"></div>

<div class="comments-section">
  <ul id="comments-container" class="">
    <%= render partial: "/dashboard/comments/comment", collection: story.comments.roots %>
  </ul>
  <% if current_user %>
      <div class="user-input-section">
        <%= image_tag user_avatar_image(current_user, :thumb), class: 'avatar size32' %>
        <a href="javascript:void(0)" commentable="true" story-id="<%= story.id %>" class="story-editable popup-with-zoom-anim" placeholder="What's your
          comment?" contenteditable="true"></a>
      </div>
      <div class="edit-comment-section hidden">
        <div class="edit-comment-wrapper">
          <a href="javascript:void(0)"  class="comment-editable story-editable" contenteditable="true"> test....</a>
          <span class="cancel">(Close)</span>
        </div>
      </div>
  <% end %>
</div>
