<!-- Responsive Navigation Trigger -->
<a href="#" class="dashboard-responsive-nav-trigger"><i class="fa fa-reorder"></i> Dashboard Navigation</a>

<div class="dashboard-nav">
  <div class="dashboard-nav-inner">

    <ul data-submenu-title="Main">
      <li class="<%= active_navigation('dashboard') %>">
        <%= link_to :dashboard do %>
            <i class="sl sl-icon-settings"></i> <%= t('label.dashboard') %>
        <% end %>
      </li>
      <li class="<%= active_navigation('messages') %>">
        <%= link_to :agent_dashboard_messages do %>
            <i class="sl sl-icon-envelope-open"></i> <%= t('label.messages') %>
            <span class="nav-tag messages">2</span>
        <% end %>
      </li>
    </ul>

    <ul data-submenu-title="Listings">
      <li class="<%= active_navigation('properties') %>">
        <%= link_to :agent_dashboard_brands do %>
            <i class="sl sl-icon-layers"></i> <%= t('label.my_properties') %>
        <% end %>
      </li>

      <li class="<%= active_navigation('reviews') %>">
        <%= link_to :agent_dashboard_reviews do %>
            <i class="sl sl-icon-star"></i> <%= t('label.reviews') %>
        <% end %>
      </li>
      <li>
        <%= link_to :new_agent_dashboard_brand do %>
            <i class="sl sl-icon-plus"></i> <%= t('label.add_brand') %>
        <% end %>
      </li>
    </ul>

    <ul data-submenu-title="Account">
      <li>
        <%= link_to dashboard_profile_path do %>
            <i class="sl sl-icon-user"></i>
            <%= t('label.my_profile') %>
        <% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path, :method => 'delete' do %>
            <i class="sl sl-icon-power"></i>
            <%= t('label.logout') %>
        <% end %>
      </li>
    </ul>

  </div>
</div>
<!-- Navigation / End -->
