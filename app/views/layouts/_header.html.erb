<header id="header-container" class="<%= @header_classes %>">

  <div id="header">
    <div class="container">
      <div class="left-side">
        <div id="logo">
          <%= link_to image_tag('logo.png'), root_path %>
        </div>
        <div class="mmenu-trigger">
          <button class="hamburger hamburger--collapse" type="button">
						<span class="hamburger-box">
							<span class="hamburger-inner"></span>
						</span>
          </button>
        </div>

      </div>
      <div class="right-side">
        <div class="header-widget">
          <% if current_user %>
              <!-- User Menu -->
              <div class="user-menu">
                <div class="user-name"><span><%= '' %></span>
                  <%= t('label.my_account') %>
                </div>
                <ul>
                  <li>
                    <%= link_to dashboard_path do %>
                        <i class="sl sl-icon-settings"></i> <%= t('label.dashboard') %>
                    <% end %>
                  </li>

                  <li>
                    <%= link_to :dashboard_messages do %>
                        <i class="sl sl-icon-envelope-open"></i> <%= t('label.messages') %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to dashboard_profile_path do %>
                        <i class="sl sl-icon-user"></i>
                        <%= t('label.my_profile') %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to destroy_user_session_path, :method => 'delete' do %>
                        <i class="sl sl-icon-power"></i>
                        <%= t('label.logout') %>
                    <% end %>
                  </li>
                </ul>
              </div>
          <% else %>
              <a href="#sign-in-dialog" class="sign-in popup-with-zoom-anim"><i class="sl sl-icon-login"></i> <%= t('label.sign_in') %>
              </a>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</header>
<div class="clearfix"></div>
<div id="story-detail-dialog" class="no-side-padding small-dialog zoom-anim-dialog mfp-hide">
  <div id="story-detail-content" class="min-height-100">

  </div>
</div>
