<li id="message-link-<%= message.id %>" class="<%= message.status %>">
  <%= link_to agent_dashboard_message_path(message), remote: true do %>
      <div class="message-avatar">
        <img src="http://www.gravatar.com/avatar/00000000000000000000000000000000?d=mm&amp;s=70" alt=""></div>
      <div class="message-by">
        <div class="message-by-headline">
          <h5><%= message.user.try(:name_email) %> <i class="message-status"><%= message.status %></i></h5>
          <span>
            <time class="timeago" datetime="<%= message.created_at.getutc.iso8601 %>">
              <%= message.created_at.to_s %>
            </time>
          </span>
        </div>
        <p><%= truncate message.body, length: 120 %></p>
      </div>
  <% end %>
</li>
