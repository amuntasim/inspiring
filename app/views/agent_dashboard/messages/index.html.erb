<%= render 'parts/title_breadcrumb', title: t('label.messages') %>

<div class="row">

  <!-- Listings -->
  <div class="col-lg-12 col-md-12">
    <div class="messages-container margin-top-0">
      <div class="messages-headline">
        <h4 class="messages-headline-title">Inbox</h4>
        <span class="message-actions pull-right">
        </span>
      </div>
      <div class="message-blank-div">
        <div class="messages-inbox">
          <ul>
            <%= render @messages %>
          </ul>
          <%= will_paginate @messages, previous_label: "<i class='sl sl-icon-arrow-left'></i>", next_label: "<i class='sl sl-icon-arrow-right'></i>" %>
        </div>
        <div class="message-content">

        </div>
      </div>
    </div>
  </div>

</div>
